{# Main report template #}
<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Report - {{ report.summary.total }} tests</title>
    <link rel="stylesheet" href="data:text/css,{% include 'style.css' %}">
</head>
<body>
    <header>
        <h1>Test Report</h1>
        <p class="meta">
            Generated {{ report.run_meta.end_time }} |
            Duration: {{ report.run_meta.duration | duration }} |
            Schema v{{ report.schema_version }}
            {% if report.run_meta.git_sha %}
            | Git: <code>{{ report.run_meta.git_sha[:8] }}</code>{% if report.run_meta.git_dirty %} (dirty){% endif %}
            {% endif %}
        </p>
    </header>

    <main>
        {% include 'summary.html.j2' %}

        <section class="filters">
            {% include 'components/filters.html.j2' %}
        </section>

        <section class="tests">
            <h2>Tests</h2>
            {% for test in report.tests | sort(attribute='nodeid') %}
            {% include 'test_row.html.j2' %}
            {% endfor %}
        </section>

        {% if report.collection_errors %}
        <section class="errors">
            <h2>Collection Errors</h2>
            {% for error in report.collection_errors %}
            <div class="error">
                <code>{{ error.nodeid }}</code>: {{ error.message }}
            </div>
            {% endfor %}
        </section>
        {% endif %}

        {% if report.warnings %}
        <section class="warnings">
            <h2>Warnings</h2>
            {% for warning in report.warnings %}
            <div class="warning">
                <code>{{ warning.code }}</code>: {{ warning.message }}
            </div>
            {% endfor %}
        </section>
        {% endif %}
    </main>

    <footer>
        <p>Generated by <a href="https://github.com/example/pytest-llm-report">pytest-llm-report</a> v{{ report.run_meta.plugin_version }}</p>
    </footer>

    <script>{% include 'report.js' %}</script>
</body>
</html>
